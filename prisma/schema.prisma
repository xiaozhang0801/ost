// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

// Shipping rule saved per shop
model ShippingRule {
  id          String          @id @default(cuid())
  shop        String          // shop domain, e.g., mystore.myshopify.com
  name        String
  chargeBy    String          // weight | volume | quantity
  countries   Json            // array of ISO country codes
  description String?         
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  ranges      ShippingRange[]
}

model ShippingRange {
  id        String   @id @default(cuid())
  ruleId    String
  fromVal   Float    // for quantity, we still store as Float but will treat as integer
  toVal     Float
  unit      String   // KG | CBM | 件
  pricePer  Float    // price per unit (RMB per KG/CBM or per 件)
  fee       Float    // registration fee per shipment (RMB per order)
  feeUnit   String   // e.g., CNY

  rule      ShippingRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
}
